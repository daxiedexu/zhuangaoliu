<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">
    <RelativeLayout
        android:id="@+id/head"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="32dp">
        <ImageView
            android:src="@drawable/back"
            android:layout_alignParentLeft="true"
            android:layout_width="20dp"
            android:layout_height="match_parent">
        </ImageView>
        <TextView
            android:id="@+id/act_detail_head_title"
            android:visibility="invisible"
            android:textStyle="bold"
            android:lines="1"
            android:ellipsize="end"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
        </TextView>
        <ImageView
            android:src="@drawable/more"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_height="match_parent">
        </ImageView>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/act_detail_ScrollView"
        android:layout_below="@id/head"
        android:fitsSystemWindows="true"
        android:fadingEdge="vertical"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/head_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/act_detail_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:id="@+id/act_detail_image"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/act_detail_title"
                    android:layout_alignParentLeft="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp">
                </ImageView>
                <TextView
                    android:id="@+id/act_detail_author"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/act_detail_image"
                    android:layout_below="@+id/act_detail_title"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:id="@+id/act_detail_date"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/act_detail_image"
                    android:layout_below="@+id/act_detail_author"
                    android:textSize="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
            </RelativeLayout>
            <com.tencent.smtt.sdk.WebView
                android:id="@+id/act_detail_WebView"
                android:layout_below="@+id/head_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </com.tencent.smtt.sdk.WebView>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:background="#A08E8E"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <EditText
            android:id="@+id/act_detail_write"
            android:hint="写评论..."
            android:textSize="14dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/paint"
            android:background="@drawable/edit_backcolor"
            android:layout_width="210dp"
            android:layout_height="32dp">
        </EditText>
        <ImageView
            android:id="@+id/act_detail_say"
            android:layout_marginLeft="28dp"
            android:layout_toRightOf="@id/act_detail_write"
            android:src="@drawable/say"
            android:layout_centerVertical="true"
            android:layout_width="21dp"
            android:layout_height="30dp">
        </ImageView>
        <ImageView
            android:id="@+id/act_detail_collect"
            android:layout_marginLeft="28dp"
            android:layout_toRightOf="@id/act_detail_say"
            android:src="@drawable/collect_false"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp">
        </ImageView>
        <ImageView
            android:id="@+id/act_detail_upload"
            android:layout_marginLeft="28dp"
            android:layout_toRightOf="@id/act_detail_collect"
            android:src="@drawable/upload"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp">
        </ImageView>
    </RelativeLayout>
</RelativeLayout>